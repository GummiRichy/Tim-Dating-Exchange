    <script>
        // Sample data
        const girls = [
            {
                id: 'A',
                name: 'A (Beijing)',
                background: 'Columbia Masters candidate, considering PhD',
                currentPrice: 10,
                priceHistory: [10, 10.2, 9.8, 10.5, 10.1, 10.8, 10.3],
                volume: [5, 8, 3, 12, 7, 15, 6],
                sentiment: 0,
                color: '#E94B3C'
            },
            {
                id: 'B',
                name: 'B (Qingdao)',
                background: 'LLM Research, Part-time Masters',
                currentPrice: 10,
                priceHistory: [10, 10.1, 10.4, 10.2, 10.6, 10.9, 10.5],
                volume: [4, 6, 9, 5, 11, 8, 10],
                sentiment: 0,
                color: '#4A90E2'
            },
            {
                id: 'C',
                name: 'C (CXG\'s Friend)',
                background: 'Casual vibes, spontaneous hangouts',
                currentPrice: 10,
                priceHistory: [10, 9.9, 10.3, 10.1, 9.7, 10.2, 9.9],
                volume: [3, 7, 4, 8, 6, 5, 9],
                sentiment: 0,
                color: '#F5A623'
            },
            {
                id: 'D',
                name: 'D (Shanghai)',
                background: 'Finance professional, boarding school background',
                currentPrice: 10,
                priceHistory: [10, 10.2, 10.1, 9.9, 10.4, 10.3, 10.2],
                volume: [6, 5, 7, 4, 10, 6, 8],
                sentiment: 0,
                color: '#7ED321'
            }
        ];

        let traders = {
            'You': { balance: 100, holdings: {}, initialBalance: 100 },
            'Tim': { balance: 100, holdings: {}, initialBalance: 100 },
            'Friend 1': { balance: 100, holdings: {}, initialBalance: 100 },
            'Friend 2': { balance: 100, holdings: {}, initialBalance: 100 }
        };

        let news = [];
        let charts = {};

        function switchTab(event, tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        function initializeMarket() {
            const stockGrid = document.getElementById('stockGrid');
            stockGrid.innerHTML = '';

            girls.forEach(girl => {
                const card = document.createElement('div');
                card.className = 'stock-card';
                const priceChange = girl.currentPrice - girl.priceHistory[0];
                const percentChange = ((priceChange / girl.priceHistory[0]) * 100).toFixed(2);

                card.innerHTML = `
                    <div class="stock-header">
                        <div>
                            <h3 class="stock-title">${girl.name}</h3>
                            <p class="stock-info">${girl.background}</p>
                        </div>
                    </div>
                    <div class="price-display">${girl.currentPrice.toFixed(2)} TLT</div>
                    <div class="price-change ${priceChange >= 0 ? 'positive' : 'negative'}">
                        ${priceChange >= 0 ? 'üìà' : 'üìâ'} ${Math.abs(percentChange)}% 
                        (${priceChange >= 0 ? '+' : ''}${priceChange.toFixed(2)} TLT)
                    </div>
                    <div class="chart-container" id="chart-${girl.id}" style="display: none;"></div>
                    <button class="chart-toggle" onclick="toggleChart('${girl.id}')">Show Chart</button>
                    <div class="trading-controls">
                        <input type="number" class="trade-input" id="qty-${girl.id}" placeholder="Quantity" min="1">
                        <button class="btn btn-primary btn-small" onclick="buyStock('${girl.id}')">Buy</button>
                        <button class="btn btn-secondary btn-small" onclick="sellStock('${girl.id}')">Sell</button>
                    </div>
                `;

                stockGrid.appendChild(card);
            });

            populateNewsSelect();
            updatePortfolioTab();
            updateLeaderboard();
        }

        function toggleChart(girlId) {
            const girl = girls.find(g => g.id === girlId);
            const chartContainer = document.getElementById(`chart-${girlId}`);
            const button = event.target;

            if (chartContainer.style.display === 'none') {
                chartContainer.style.display = 'block';
                button.classList.add('hidden');
                button.textContent = 'Hide Chart';
                createChart(girl);
            } else {
                chartContainer.style.display = 'none';
                button.classList.remove('hidden');
                button.textContent = 'Show Chart';
            }
        }

        function createChart(girl) {
            const canvasId = `chart-${girl.id}`;
            if (charts[canvasId]) return;

            const container = document.getElementById(canvasId);
            const canvas = document.createElement('canvas');
            canvas.id = `canvas-${girl.id}`;
            container.appendChild(canvas);

            const ctx = canvas.getContext('2d');
            charts[canvasId] = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['T-6', 'T-5', 'T-4', 'T-3', 'T-2', 'T-1', 'Now'],
                    datasets: [
                        {
                            label: 'Price (TLT)',
                            data: girl.priceHistory,
                            borderColor: girl.color,
                            backgroundColor: girl.color + '20',
                            borderWidth: 2,
                            tension: 0.4,
                            fill: true,
                            yAxisID: 'y'
                        },
                        {
                            label: 'Volume',
                            data: girl.volume,
                            type: 'bar',
                            backgroundColor: girl.color + '40',
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: true }
                    },
                    scales: {
                        y: {
                            title: { display: true, text: 'Price' },
                            position: 'left'
                        },
                        y1: {
                            title: { display: true, text: 'Volume' },
                            position: 'right',
                            max: 20
                        }
                    }
                }
            });
        }

        function buyStock(girlId) {
            const girl = girls.find(g => g.id === girlId);
            const qty = parseInt(document.getElementById(`qty-${girlId}`).value);
            if (!qty || qty <= 0) return alert('Invalid quantity');

            const cost = qty * girl.currentPrice;
            const yourBalance = traders['You'].balance;
            if (cost > yourBalance) return alert('Insufficient balance!');

            traders['You'].balance -= cost;
            traders['You'].holdings[girlId] = (traders['You'].holdings[girlId] || 0) + qty;

            // Price impact: buying increases price slightly
            girl.currentPrice += 0.05 * qty;
            girl.priceHistory.push(girl.currentPrice);
            if (girl.priceHistory.length > 7) girl.priceHistory.shift();
            girl.volume.push(qty);
            if (girl.volume.length > 7) girl.volume.shift();

            document.getElementById(`qty-${girlId}`).value = '';
            initializeMarket();
        }

        function sellStock(girlId) {
            const girl = girls.find(g => g.id === girlId);
            const qty = parseInt(document.getElementById(`qty-${girlId}`).value);
            const yourHoldings = traders['You'].holdings[girlId] || 0;
            if (!qty || qty <= 0 || qty > yourHoldings) return alert('Invalid or insufficient holdings!');

            const proceeds = qty * girl.currentPrice;
            traders['You'].balance += proceeds;
            traders['You'].holdings[girlId] -= qty;

            // Price impact: selling decreases price slightly
            girl.currentPrice -= 0.05 * qty;
            girl.priceHistory.push(girl.currentPrice);
            if (girl.priceHistory.length > 7) girl.priceHistory.shift();
            girl.volume.push(qty);
            if (girl.volume.length > 7) girl.volume.shift();

            document.getElementById(`qty-${girlId}`).value = '';
            initializeMarket();
        }

        function populateNewsSelect() {
            const select = document.getElementById('newsStockSelect');
            select.innerHTML = '<option value="">Select a stock...</option>';
            girls.forEach(girl => {
                const option = document.createElement('option');
                option.value = girl.id;
                option.textContent = girl.name;
                select.appendChild(option);
            });
        }

        document.getElementById('sentimentSlider').addEventListener('input', (e) => {
            const value = parseInt(e.target.value);
            const display = document.getElementById('sentimentValue');
            display.textContent = value;
            display.className = 'sentiment-value ' + (value > 0 ? 'positive' : value < 0 ? 'negative' : '');
        });

        function postNews() {
            const girlId = document.getElementById('newsStockSelect').value;
            const content = document.getElementById('newsContent').value;
            const sentiment = parseInt(document.getElementById('sentimentSlider').value);

            if (!girlId || !content) return alert('Please fill in all fields');

            const girl = girls.find(g => g.id === girlId);
            
            // Price impact based on sentiment
            const priceImpact = (sentiment / 10) * 0.5;
            girl.currentPrice = Math.max(1, girl.currentPrice + priceImpact);
            girl.sentiment = sentiment;
            girl.priceHistory.push(girl.currentPrice);
            if (girl.priceHistory.length > 7) girl.priceHistory.shift();

            news.unshift({
                id: Date.now(),
                girlId,
                girlName: girl.name,
                content,
                sentiment,
                timestamp: new Date().toLocaleString()
            });

            // Random trader reactions
            const traderNames = Object.keys(traders).filter(t => t !== 'You');
            traderNames.forEach(traderName => {
                if (Math.random() > 0.5) {
                    const qty = Math.floor(Math.random() * 3) + 1;
                    if (sentiment > 0 && traders[traderName].balance >= qty * girl.currentPrice) {
                        traders[traderName].balance -= qty * girl.currentPrice;
                        traders[traderName].holdings[girlId] = (traders[traderName].holdings[girlId] || 0) + qty;
                    } else if (sentiment < 0 && (traders[traderName].holdings[girlId] || 0) >= qty) {
                        traders[traderName].balance += qty * girl.currentPrice;
                        traders[traderName].holdings[girlId] -= qty;
                    }
                }
            });

            document.getElementById('newsStockSelect').value = '';
            document.getElementById('newsContent').value = '';
            document.getElementById('sentimentSlider').value = 0;
            document.getElementById('sentimentValue').textContent = '0';

            updateNewsFeed();
            initializeMarket();
        }

        function updateNewsFeed() {
            const feed = document.getElementById('newsFeed');
            feed.innerHTML = '';

            news.forEach(item => {
                const div = document.createElement('div');
                const sentimentClass = item.sentiment > 0 ? 'positive' : item.sentiment < 0 ? 'negative' : 'neutral';
                div.className = `news-item ${sentimentClass}`;

                div.innerHTML = `
                    <div class="news-meta">${item.girlName} ‚Ä¢ ${item.timestamp}</div>
                    <p class="news-body">${item.content}</p>
                    <span class="sentiment-badge ${sentimentClass}">
                        Sentiment: ${item.sentiment > 0 ? '+' : ''}${item.sentiment}
                    </span>
                `;

                feed.appendChild(div);
            });
        }

        function updatePortfolioTab() {
            const tbody = document.getElementById('holdingsTableBody');
            tbody.innerHTML = '';

            let totalValue = traders['You'].balance;

            girls.forEach(girl => {
                const qty = traders['You'].holdings[girl.id] || 0;
                if (qty > 0) {
                    const value = qty * girl.currentPrice;
                    totalValue += value;
                    const gain = value - (qty * 10); // Assuming bought at 10
                    const gainPercent = ((gain / (qty * 10)) * 100).toFixed(2);

                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${girl.name}</td>
                        <td>${qty}</td>
                        <td>${girl.currentPrice.toFixed(2)}</td>
                        <td>${value.toFixed(2)} TLT</td>
                        <td class="${gain >= 0 ? 'positive' : 'negative'}" style="color: ${gain >= 0 ? '#22C55E' : '#C01547'}">
                            ${gain >= 0 ? '+' : ''}${gain.toFixed(2)} (${gainPercent}%)
                        </td>
                    `;
                    tbody.appendChild(row);
                }
            });

            document.getElementById('totalBalance').textContent = totalValue.toFixed(2) + ' TLT';
        }

        function updateLeaderboard() {
            const tbody = document.getElementById('leaderboardTableBody');
            tbody.innerHTML = '';

            const rankings = Object.entries(traders).map(([name, data]) => {
                let portfolioValue = data.balance;
                girls.forEach(girl => {
                    const qty = data.holdings[girl.id] || 0;
                    portfolioValue += qty * girl.currentPrice;
                });
                return { name, portfolioValue, gain: portfolioValue - 100 };
            }).sort((a, b) => b.portfolioValue - a.portfolioValue);

            rankings.forEach((trader, index) => {
                const row = document.createElement('tr');
                const gainClass = trader.gain >= 0 ? 'positive' : 'negative';
                row.innerHTML = `
                    <td><span class="rank">#${index + 1}</span></td>
                    <td>${trader.name}</td>
                    <td>${trader.portfolioValue.toFixed(2)} TLT</td>
                    <td style="color: ${trader.gain >= 0 ? '#22C55E' : '#C01547'}">
                        ${trader.gain >= 0 ? '+' : ''}${trader.gain.toFixed(2)} TLT
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        // Initialize
        initializeMarket();
    </script>
</body>
</html>
